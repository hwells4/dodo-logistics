{
  "name": "my-saas-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:all": "jest --runInBand",
    "sync-types": "tsx src/scripts/sync-types.ts",
    "sync-types:watch": "nodemon --watch src/lib/supabase/types.ts --exec 'npm run sync-types'",
    "sync-types:force": "rm -f src/lib/supabase/types.ts && npm run sync-types",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run lint && npm run type-check && npm run test:all",
    "validate:full": "npm run validate && npm run build",
    "prepare": "husky install && sort-package-json"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slot": "^1.1.1",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.47.10",
    "@tanstack/react-query": "^5.62.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "lucide-react": "^0.469.0",
    "next": "15.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.49.1",
    "@shadcn/ui": "^0.0.4",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.17.12",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "eslint": "^9",
    "eslint-config-next": "15.1.3",
    "husky": "^9.1.7",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^29.6.0",
    "lint-staged": "^15.3.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "sort-package-json": "^2.12.0",
    "supabase": "^1.115.5",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "jest --bail --findRelatedTests",
      "tsc --noEmit"
    ],
    "*.{js,jsx,ts,tsx,md,html,css}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
